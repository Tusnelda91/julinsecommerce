
<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
  <div class="form-group row">
      <div class="col-sm-4 col-md-offset-4">
        <%= f.label :body, "Comments" %><br>
        <%= f.text_area :body, class: "form-control", placeholder: "Thank you for your review!" %>
      </div>
  </div> 
    <p>
      <%= f.label :rating %><br>
      <div class="rating"> </div>
    </p>  
    <p>
      <%= f.submit "Submit", class: "btn btn-primary",style: 'font-family: Acme,Arial,Georgia,serif; font-size: 1.3em; letter-spacing:0.05em' %>
    </p>
  <% end %>
<% end %>
