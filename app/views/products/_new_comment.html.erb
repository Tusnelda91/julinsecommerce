    
<div class="row" style="width: 90%">
<div class="col-md-12">
<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
  <div class="form-group">
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, class: "form-control" %>
    </p>
    </div>
    <p>
      <%= f.label :rating %><br>
      <div class="rating"> </div>
    </p>  
    <p>
      <%= f.submit "Submit", class: "btn btn-primary",style: 'font-family: Acme,Arial,Georgia,serif; font-size: 1.3em; letter-spacing:0.05em' %>
    </p>
  <% end %>
<% end %>
</div>
</div>
