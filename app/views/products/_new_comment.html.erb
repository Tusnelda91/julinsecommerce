    
<% if signed_in? %>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <div class="form-group row">
      <div class="col-sm-4 col-md-offset-4">
        <%= form.label :body, "Add a review" %><br>
        <%= form.text_area :body, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group row">
      <div class="col-sm-4 col-md-offset-4">
        <%= form.label :rating %><br>
        <div class="rating"> </div>
      </div>
    </div>  
    
    <div class="form-group row">
      <div class="col-sm-4 col-md-offset-4">
        <%= form.submit "Submit", class: "btn btn-primary",style: 'font-family: Acme,Arial,Georgia,serif; font-size: 1.3em; letter-spacing:0.05em' %>
      </div>
    </div>
  <% end %>
<% end %>
