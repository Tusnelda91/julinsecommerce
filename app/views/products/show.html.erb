<p id="notice"><%= notice %></p>


<div class="product-show">
  <h1>
    <strong>Name:</strong>
    <%= @product.name %>
  </h1>

  <h3>
    <strong>Description:</strong>
    <%= @product.description %>
  </h3>

<%= image_tag(@product.image_url,class: "img-responsive img-zoom", data_zoom_image: @product.image_url) %>


  <p>
    <%= @product.image_url %>
  </p>

  <h3>
    <%= @product.more_about %>
  </h3>

  <h3>
    <strong> Price:</strong>
    <%= @product.price %>
  </h3>
</div>

<p>Average Rating: <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div> </p>

 <%= form_tag "/payments/create" do %>
        <%= hidden_field_tag(:product_id, @product.id) %>
        <%= render partial: 'shared/stripe_checkout_button' %>
<% end %>



<% if signed_in? %>
              <h4>Add a review:</h4>
              <%= form_for([@product, @product.comments.build]) do |f| %>
                  <p>
                    <%= f.label :body, "Comments" %><br>
                    <%= f.text_area :body %>
                  </p>

                  <p>
                  <div class="rating"></div>
                  </p>

                  <p>
                    <%= f.submit "Submit" %>
                  </p>
              <% end %>
<% end %>

<% if @product.highest_rating_comment %>
  <p><%= @product.highest_rating_comment.body %></p>
<% end %>

<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary', id: 'edit', style: 'color:#28c093' %> |
<%= link_to 'Back', products_path, class: 'btn btn-primary', id: 'back', style: 'color:#28c093' %>

<%= render 'new_comment' %>
<%= render 'comments' %>

<!--%= will_paginate @comments %-->
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @comments %>
    </div>
  <%= will_paginate @comments %>
</div>

