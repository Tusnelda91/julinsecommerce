<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row" style="width: 90%">
    <div class="col-md-12">
<!--div class="all-forms"-->
  <div class="form-group">
    <%= form.label :name %> <br>
    <%= form.text_field :name, class: "form-control", id: :product_name, placeholder:"Please enter the product name" %>
  </div>

  <div class="form-group">
    <%= form.label :description %> <br>
    <%= form.text_area :description, class: "form-control", id: :product_description, placeholder:"Please enter some description of the product" %>
  </div>

  <div class="form-group">
    <%= form.label :image_url %> <br>
    <%= form.text_field :image_url, class: "form-control", id: :product_image_url, placeholder:"Please enter the image's url" %>
  </div>

  <div class="form-group">
    <%= form.label :more_about %><br>
    <%= form.text_field :more_about, class: "form-control", placeholder:"Here you can write more about the product" %>
  </div>

  <div class="form-group">
  <%= form.label :details %><br>
  <%= form.text_field :details, class: "form-control", placeholder:"Here you can write more about the product" %>
</div>

  <div class="form-group">
    <%= form.label :price %><br>
    <%= form.text_field :price, class: "form-control", placeholder:"Please enter the product's price" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
</div>
  </div>


<% end %>
